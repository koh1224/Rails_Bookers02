<div class="container">
  <div class="row">
    <div class="top-text">
      <h1>User info</h1>
    </div>
  </div>
  <div class="text-danger">
    <% if @user.errors.any? %>
      <h1><%= @user.errors.count %>error prohibited this obj from being saved:</h1>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="row">
    <%= form_with model:@user, local:true do |f| %>
      <p>Name</p>
      <%= f.text_field :username, size: 60 %>
      <p>Image</p>
      <%= f.attachment_field :profile_image %>
      <p>Introduction</p>
      <%= f.text_area :introduction, size: "60x2" %>
      <%= f.submit 'Update User', class:"btn btn-primary w-25 btn-secondary" %>
    <% end %>
  </div>
</div>