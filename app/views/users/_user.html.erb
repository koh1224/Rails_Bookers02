<table>
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.username %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if @user.id == current_user.id %>
  <p><%= link_to "Edit", edit_user_path(@user) %></p>
<% end %>
