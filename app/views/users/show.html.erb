<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', user: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <td></td>
            <td style="text-align: center;">Title</td>
            <td style="text-align: center;">Opinion</td>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

