<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
          <nav class="nav navbar-left">
            <%= link_to root_path, class:"btn btn-link text-white" do %>
              <span>Bookers</span>
            <% end %>
          </nav>
          <nav>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to user_path(current_user), class:"btn btn-link text-white" do %>
                    <span class="fas fa-home"> Home</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-users"> Users</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to books_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-book-open"> Books</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link text-white" do %>
                    <span class="fas fa-sign-out-alt"> Logout</span>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to root_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-home"> Home</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to home_about_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-link"> About</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-user-plus"> sign up</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_session_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-sign-in-alt"> login</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </nav>
    </header>

    <%= yield %>

    <p class="notice"><%= notice %></p>

    <footer>
      <p class="text-center mt-5"> CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>